---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from 'astro:assets';
import Carousel from "../components/Carousel.astro";

const pageTitle = "Our Story";
---

<BaseLayout pageTitle={pageTitle}>
  <section class="animated-section">
    <div class="content-details">
      <div>
        <h1>Our Story</h1>
        <!-- <Carousel /> -->
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .ourstorySection {
    width: 100%;
    height: 100%;
  }

  .ourstorySection .right-floral-img {
    width: 40rem;
    height: 40rem;
    position: absolute;
    top: 7rem;
    right: 0;
  }

  .ourstorySection .left-floral-img {
    width: 40rem;
    height: 40rem;
    position: absolute;
    top: 7rem;
    left: 0;
  }

  @media(max-width: 900px) {
      .ourstorySection .left-floral-img {
      width: 30rem;
      height: 30rem;

    }

    .ourstorySection .right-floral-img {
      width: 30rem;
      height: 30rem;

    }
  }

  @media(max-width: 700px) {
      .ourstorySection .left-floral-img {
        width: 20rem;
        height: 20rem;
    }

    .ourstorySection .right-floral-img {
      width: 20rem;
      height: 20rem;
    }
  }




</style>


