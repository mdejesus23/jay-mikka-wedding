---
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";

import mainImage from "../images/wedd-img-5.jpeg";
import floralImage1 from "../images/wedd-img-main.jpeg";

const pageTitle = "Wedding Website";
---

<BaseLayout pageTitle={pageTitle}>
  <section class="hero">
    <div class="main-image-container">
      <!-- <Image src={floralImage1} alt="Wedding image" /> -->
    </div>
  </section>

  <section class="event-details">
    <div class="content">
      <div class="content-details">
        <div class="adlib">BY THE GRACE OF GOD</div>
        <div class="adlib">AND WITH THE BLESSING OF OUR FAMILIES</div>
        <div class="adlib">WE.</div>
        <h1>Jay Mar <br /> and <br /> Ayessa Mikka</h1>
        <div class="adlib">REQUEST THE HONOR OF YOUR PRESENCE AT</div>
        <div class="adlib">OUR WEDDING CELEBRATION</div>
        <div class="adlib cursive">See you at</div>
        <div class="wedd-date">
          <div class="day">SATURDAY</div>
          <div class="day-num">05</div>
          <div class="hour">AT 1:00 PM</div>
        </div>
        <div class="month">OCTOBER</div>
        <h2>St. Pancratious Chapel, Paco Park Manila</h2>
        <div class="adlib cursive">Reception to follow at</div>
        <h2>Rosas Garden Hotel</h2>
        <div class="adlib cursive">
          1140 M.H. Del Pilar St, Ermita, Manila, 1000 Metro Manila
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
