---
import { Image } from "astro:assets";
import mainImage from "../images/ring.jpeg";
---

<figure class="main-image">
  <Image class="main-image" src={mainImage} alt={"main image"} />
</figure>

<style>
  .main-image {
    border-radius: 8px;
    width: 100%;
    margin: 0 auto;
    text-align: center;
  }

  .main-image img {
    max-width: 400px;
    max-height: 500px;
    object-fit: cover;
  }

  @media (max-width: 900px) {
    .main-image {
      width: 100%;
      margin: 1rem auto;
      text-align: center;
    }
  }

  @media (max-width: 500px) {
    .main-image img {
      max-width: 100%;
      max-height: 600px;
      object-fit: cover;
    }
  }

  @media (max-width: 420px) {
    .main-image img {
      max-width: 95%;
      max-height: 420px;
      object-fit: cover;
    }
  }
</style>
